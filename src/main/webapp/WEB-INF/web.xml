<?xml version="1.0" encoding="utf-8"?>
<web-app >

<!--1st landing page when app open is execute  -->
  <welcome-file-list>
    <welcome-file>jsp/landing-page.jsp</welcome-file>
  </welcome-file-list>
<!--/1st landing page when app open is execute  -->

<servlet>
        <servlet-name>ggg</servlet-name>
        <servlet-class>sign.check</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ggg</servlet-name>
        <url-pattern>/doctrina</url-pattern>
    </servlet-mapping>

<!-- signup page -->

    <servlet>
        <servlet-name>resultSignup</servlet-name>
        <servlet-class>sign.Signup</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>resultSignup</servlet-name>
        <url-pattern>/doctrina.signup</url-pattern>
    </servlet-mapping>
    
    <filter>  
      <filter-name>signup</filter-name>  
      <filter-class>auth.SignupAuth</filter-class>  
  </filter>  
  
  <filter-mapping>  
      <filter-name>signup</filter-name>  
      <url-pattern>/doctrina.signup</url-pattern>  
  </filter-mapping>
  
<!--/signup page  -->

<!--signin page  -->

    <servlet>
        <servlet-name>resultSignin</servlet-name>
        <servlet-class>sign.Signin</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>resultSignin</servlet-name>
        <url-pattern>/doctrina.signin</url-pattern>
    </servlet-mapping>
    
    <filter>  
      <filter-name>signin</filter-name>  
      <filter-class>auth.SigninAuth</filter-class>  
    </filter>  
  
    <filter-mapping>  
      <filter-name>signin</filter-name>  
      <url-pattern>/doctrina.signin</url-pattern>  
    </filter-mapping>
    
 <!--/signin page  -->


<!--home page  -->

    <servlet>
        <servlet-name>home</servlet-name>
        <jsp-file>jsp/home.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/doctrina.home</url-pattern>
    </servlet-mapping>
<!--/home page  -->
</web-app>